!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= content_for?(:title) ? yield(:title) : "Blog"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js" type="text/javascript"></script>
  %body
    .navbar.navbar-inverse
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} Blog
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => "/articles"} Articles
            %li
              %a{:href => "#"} Contact
          %p.navbar-text.pull-right
            - if user_signed_in?
              Logged in as
              = succeed "." do
                %strong= current_user.email
              = link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link'
              |
              = link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'
              = image_tag(current_user.avatar.url, :class => 'nav-img')
            - else
              = link_to "Sign up", new_user_registration_path, :class => 'navbar-link'
              |
              = link_to "Login", new_user_session_path, :class => 'navbar-link'


    .container
      .row
        .col-md-3
          .thumbnail
            .caption-full
              %p.lead Blog Tags
              %hr
              - tag_cloud
              - @tags.each do |tag|
                = link_to tag.name, tag_path(tag), :class => "btn btn-primary btn-xs btn-space #{'css'+tag.taggings_count.to_s}"

          - if user_signed_in?
            = link_to 'New Article',                       |
              new_article_path,                            |
              :class => 'col-md-12 btn btn-lg btn-success' |
        .col-md-9
          = bootstrap_flash
          = yield
      / /row
      = render "layouts/footer"
    / /container

:javascript
  jQuery( document ).ready(function( $ ) {
    $("#article_tag_list").tagsinput();
  });
  