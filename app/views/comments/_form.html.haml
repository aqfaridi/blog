= form_for([@comment, current_user.comments.build],:url => article_comments_path(@article),:html => { :class => "form-horizontal" }) do |f|
  .form-group
    = f.label :body, :class => 'control-label col-md-2'
    .col-lg-10
      = f.text_area :body, :rows => '5', :id => 'area1', :class => 'form-control'
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit :class => 'btn btn-success'

:javascript
  jQuery( document ).ready(function( $ ) {
    new nicEditor().panelInstance('area1');
  });
  