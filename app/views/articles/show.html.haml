.thumbnail
  .caption-full
    %h4
      = @article.title |
      %span.pull-right
        - if current_user.email == @article.user.email
          = link_to 'Edit', edit_article_path(@article), :class => 'btn btn-primary' 
    %hr/
    %p= @article.text.html_safe
  .ratings
    %p.pull-right= @article.user.email 
    %p
      = time_ago_in_words(@article.created_at)
      ago
.well
  .text-right
    %h4 Comments
  %hr/
  = render @article.comments
.panel.panel-default
  .panel-heading.caption-full
    %p Leave a Comment
  .panel-body
    - if user_signed_in?
      = render 'comments/form'
    - else
      %em you must be logged in to comment !! 
= link_to 'Back', articles_path, :class => 'btn btn-default'

