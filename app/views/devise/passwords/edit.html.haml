.container
  .row
    .col-sm-6.col-md-4.col-md-offset-2
      %h1.text-center.login-title Change your password
      .account-wall
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put,:class => "form-signin" }) do |f|
          = devise_error_messages!
          = f.hidden_field :reset_password_token
          .form-group
            = f.label :password, "New password"
            %br/
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
              %br/
            = f.password_field :password, :class => 'form-control', :placeholder => 'Password', autofocus: true, autocomplete: "off"
          .form-group
            = f.label :password_confirmation, "Confirm new password"
            %br/
            = f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Confirm Password', autocomplete: "off"
          = f.submit 'Change my password',:class => 'btn btn-info btn-block'
      .text-center.new-account
        = render "devise/shared/links"
